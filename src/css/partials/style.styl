@import "jeet"

header
    text-align right
    nav
        padding 15px
        border-bottom()
        a
            display inline-block
            padding 15px
            color #919292
            &:hover
                color darken(#919292, 20)
                background-color RGBA(0,0,0,.1)
section
    .container
        cf()
        .side-bar
            col(1/4)
            border-right()
            box-sizing border-box
            &>*
                border-bottom()
        .main
            col(3/4)
section
    .container.user_page
        cf()
        .side-bar
            span(1/4)
        .main
            border-left()
            box-sizing border-box
            span(3/4)
            margin-left -1px

.recent_posts, .best_posts
    ul
        margin 0 15px
        list-style none
        li
            margin 10px 0
.post
    col(1/4, cycle:4)
    .post_header
        margin 10px 0
.input-wrapper
    margin 10px 0
    &>*
        margin 0
    textarea
        height 150px
        resize none
    p
        word-wrap break-word
.author-wrap
    color black
    font-size 12px
    position relative
    .author-visible
        position absolute
        top -60px
        left 0
#users .search
    border-bottom()
.author
    color red
    text-decoration underline
.time
    font-size 12px
    color #919292
.post_main
    font-size 13px
.rate
    color #D18A00
.add_article
    float right
    color blue
    margin 15px
.user
    li
        padding 10px
        list-style none
        border-bottom()
        img
            width 100px
            display inline-block
            float right
#commentInput
    margin 15px 0
    display block
    width 100%
    height 150px
    resize none

.comment
    padding 15px 0
    min-height 250px
    box-sizing border-box
    border-bottom()
    cf()
    &>*
        &:first-child
            col(1/4)
        &:last-child
            col(3/4)
    .ava-block
        img
            display block
    .text-comment
        height 150px
