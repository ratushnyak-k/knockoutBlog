@import "jeet"

header
    text-align right
    nav
        padding 15px
        a
            display inline-block
            padding 15px
            color #919292
            &:hover
                color darken(#919292, 20)
                background-color RGBA(0,0,0,.1)
nav
    max-width 1024px
    margin 0 auto
footer
    cf()
    max-width 1024px
    margin 0 auto
    .navbar
        margin-bottom 0
section
    min-height calc(100% - 115px)
    margin-bottom -120px
    &:after
        content ''
        height 127px
        display block
    .container
        cf()
        max-width 1024px
        margin 0 auto
        .side-bar
            col(1/4)
            box-sizing border-box
        .main
            col(3/4)
.post
    col(1/4, cycle:4)
    .post_header
        margin 10px 0
p
    word-wrap break-word
.author-wrap
    position relative
    .author-visible
        position absolute
        top -60px
        left 0
.search
    margin-bottom 20px
.author
    color red
    text-decoration underline
.time
    font-size 12px
    color #919292
.post_main
    font-size 13px
.badge
    background-color #F7A300
.best_posts
    .panel
        margin-bottom 0
.panel-body
    padding 0
.list-group
    margin 0
.side-bar li.list-group-item
    border-right 0px
    border-left 0px
    &:first-child
        border-top 0px
    &:last-child
        border-bottom 0px
.post_footer
    .input-group
        width 76px
.navbar
    margin-bottom 10px
.add_article
    float right
    color blue
    margin 15px
.user
    li
        padding 10px
        list-style none
        img
            width 100px
            display inline-block
            float right
#commentInput
    margin 15px 0
    display block
    width 100%
    height 150px
    resize none

.comments_block
    form
        cf()
    button
        float right
.comment
    position relative
    padding 15px 0
    margin 15px 0
    min-height 250px
    box-sizing border-box
    border-bottom()
    cf()
    &:first-child
        border-top()
    &:hover .remove
        opacity 1
    &>*
        &:first-child
            col(1/4)
        &:last-child
            col(3/4)
    .ava-block
        img
            display block
    .text-comment
        height 150px
    .foot-comment
        cf()
        a
            float right
            margin-right 20px
    .remove
        position absolute
        opacity 0
        top 20px
        right 0px
